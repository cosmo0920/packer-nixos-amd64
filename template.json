{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Linux_64",
    "guest_additions_mode": "disable",
    "iso_url": "http://releases.nixos.org/nixos/14.04/nixos-14.04.291.a4ac76b/nixos-minimal-14.04.291.a4ac76b-x86_64-linux.iso",
    "iso_checksum": "db3b228c145e439165c8cb5788891e9970bba7d9",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_port": 22,
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "guest_additions_mode": "disable",
    "boot_command": [
      "<enter>",
      "<wait10><wait10><wait10>",
      "root<enter>",
      "fdisk /dev/sda<enter>",
      "n",
      "<enter><enter><enter><enter><enter>",
      "a<enter>",
      "1<enter>",
      "w<enter>",
      "<wait>",
      "mkfs.ext4 -j -L nixos /dev/sda1<enter><wait5>",
      "mount LABEL=nixos /mnt<enter>",
      "nixos-generate-config --root /mnt<enter><wait>",
      "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix > /mnt/etc/nixos/configuration.nix<enter><wait>",
      "nixos-install && reboot<enter>"
    ],
    "boot_wait": "5s",
    "disk_size": 20480,
    "http_directory": "http",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "chmod +x {{.Path}}; sudo sh '{{.Path}}'",
    "script": "postinstall.sh"
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "nixos-14.04-x86_64.box"
  }]
}
